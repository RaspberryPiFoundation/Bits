{
  "name": "raspberry-pi-bits",
  "description": "The Raspberry Pi Front End Pattern Library",
  "author": {
    "name": "The Raspberry Pi Foundation",
    "url": "https://raspberrypi.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RaspberryPiFoundation/Bits.git"
  },
  "version": "1.1.16",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src/components",
    "src/styles"
  ],
  "scripts": {
    "build": "npm-run-all rollup gulp:compile_all",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "fix": "eslint src/. --ext .js --fix; exit 0;",
    "gulp:compile_all": "gulp compile_all",
    "gulp:watch": "gulp watch",
    "lint": "eslint src/. --ext .js; exit 0;",
    "lint:staged": "lint-staged",
    "prepublishOnly": "npm run build",
    "rollup": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "start": "npm-run-all rollup:watch gulp:watch",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest --env=jsdom --notify --watch",
    "test-coverage": "jest --env=jsdom --coverage"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.4"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.3.11",
    "@storybook/react": "^3.2.16",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-jest": "21.3.2",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-header": "^2.0.5",
    "gulp-notify": "^3.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-strip-css-comments": "^2.0.0",
    "jest": "^21.2.1",
    "jest-css-modules": "^1.1.0",
    "jest-enzyme": "^4.0.1",
    "lint-staged": "5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.7.4",
    "prettier-package-json": "^1.4.0",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.1.1",
    "regenerator-runtime": "^0.11.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sass": "^0.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/setupTests.js",
    "transform": {
      ".*": "./node_modules/jest-css-modules"
    }
  },
  "jsnext:main": "lib/index.es.js",
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "module": "lib/index.es.js",
  "pre-commit": "lint:staged",
  "dependencies": {
    "@storybook/addons": "^3.3.15",
    "iotacss": "^1.5.0",
    "react-iotacss": "^1.3.1"
  }
}
