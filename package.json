{
  "name": "raspberry-pi-bits",
  "description": "The Raspberry Pi Front End Pattern Library",
  "author": "The Raspberry Pi Foundation (https://raspberrypi.org)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RaspberryPiFoundation/Bits.git"
  },
  "version": "1.1.0",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src/styles"
  ],
  "scripts": {
    "build": "rollup -c",
    "coverage": "jest --coverage; exit 0;",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "fix": "eslint src/. --ext .js --fix; exit 0;",
    "gulp": "gulp",
    "lint": "eslint src/. --ext .js; exit 0;",
    "lint:staged": "lint-staged",
    "prepublishOnly": "npm run build",
    "start": "rollup -c -w",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest --watch",
    "test-ci": "jest --coverage"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-jest": "21.3.2",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-babel": "^7.0.0",
    "gulp-clean": "^0.3.2",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-header": "^1.8.9",
    "gulp-notify": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-scss-lint": "^0.5.0",
    "gulp-strip-css-comments": "^1.2.0",
    "gulp-uglify": "^3.0.0",
    "jest": "^21.2.1",
    "jest-css-modules": "^1.1.0",
    "jest-enzyme": "^4.0.1",
    "lint-staged": "5.0.0",
    "postcss-loader": "^2.0.9",
    "prettier": "^1.7.4",
    "prettier-package-json": "^1.4.0",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-router-dom": "^4.2.2",
    "react-styleguidist": "^6.0.33",
    "react-test-renderer": "^16.1.1",
    "regenerator-runtime": "^0.11.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sass": "^0.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.10.0",
    "webpack-blocks": "^1.0.0-rc.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*js",
      "!src/components/index.js"
    ],
    "coverageReporters": [
      "text"
    ],
    "notify": true,
    "setupTestFrameworkScriptFile": "./src/setupTests.js",
    "transform": {
      ".*": "./node_modules/jest-css-modules"
    },
    "verbose": true
  },
  "jsnext:main": "lib/index.es.js",
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "module": "lib/index.es.js",
  "pre-commit": "lint:staged",
  "dependencies": {
    "iotacss": "^1.5.0",
    "react-iotacss": "^1.3.1"
  }
}
